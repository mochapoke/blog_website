<%- include('partials/header') -%> 

  <h1>Home</h1>
  <p> <%= startingContent %> </p>

  <% posts.forEach( posts => { %> 
    <h1><%= posts.title %></h1> 
    <p><%= posts.content.length > 100 ? posts.content.slice(0, 100) + ' ...' : posts.content %>
    <a href="/posts/<%= posts.title %>">➕</a>
    </p>
  <% }) %>

<%- include('partials/footer') -%> 
