<%- include('partials/header') -%> 

  <% posts.forEach(post => { %> 
    <form action="/detail" method="post">
      <div class="post">
        <a href="/posts/<%= post._id %>"><h1><%= post.title %></h1></a>
        <p>
          <%= post.content.length < 100 ? post.content : post.content.slice(0, 100) + ' ...' %>
            <a href="/posts/<%= post._id %>">➕</a>
        </p>
        <!-- <input type="hidden" name="itemID" value='<%= post._id %>' onchange="this.form.submit()"></input> -->
      </div>
    </form>
  <% }) %>

<%- include('partials/footer') -%> 
